pwrstat -pwrfail -delay 60 -active on -cmd /etc/pwrstatd-powerfail.sh -duration 1 -shutdown on


#5分钟
pwrstat -pwrfail -delay 300 -active on -cmd /etc/pwrstatd-powerfail.sh -duration 1 -shutdown on


